<%= render 'books/list', user: @user, book: @new %>

  <div class="col-md-8 offset-md-1">

  <h1>Book detail</h1>

  <table class="table">
  <tr>
  <td>
    <%= link_to user_path(@user.id) do %>
    <%= image_tag @book.user.get_profile_image(100,100) %>
    <% end %>
  </td>
  <td scope="col"><%= link_to @book.title, book_path(@book.id) %>　</td>
  <td scope="col"><%= @book.body %>　</td>
  <% if current_user.id == @book.user_id%>
  <td><%= link_to "Edit", edit_book_path(@book.id) %>　</td>
  <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか?" %></td>
  <% end %>

  </tr>
  </tr>
  <tr><td><p><%= link_to @book.user.name, user_path(@user.id) %></p></td></tr>
  </table>
  </div>

</div>
</div>
